#include<Wire.h>
#include<Adafruit_GFX.h>
#include<Adafruit_SSD1306.h>
#define WIN_H=64
#define WIN_W=128
#define OLED_RESET=-1
#define speakerPin
#define Cnl
#define WHITE 0xFFFF
#define BLACK 0x0000

Adafruit_SSD1306 OLED(WIN_W,WIN_H,&Wire,OLED_RESET)

int speedx=3
int speedy=3
int cur_x,move_x=0,move_y=0;
const int cur_y = 62;
int ball_x,ball_y;
bool gameState=true;

void start(){
  OLED.drawPixel(ball_x,ball_y,WHITE);
  OLED.drawFastVline(cur_x,cur_y,5,WHITE);
}

void move_ball(){
  int ball_move_x=0,ball_move_y=0;
  OLED.drawPixel(ball_x,ball_y,Black);
  ball_move_x=ball_x+speedx;
  ball_move_y=ball_y+speedy;

  if(ball_move_x==0){
    speedx*=-1;
    BumpSound();
  }
  if(ball_move_x==MAX){
    speedx_*=-1;
    BumpSound();
  }
  if(ball_move_y==MAX){
    gameState=false;
  }
  if(ball_move_y==0){
    speedy*=-1;
    BumpSound();
  }
  if(ball_move_y==62 && ball_move_x >= cur_x && ball_move_x <= cur_x+5){
    speedx*=-1;
    BumpSound();
  }
  ball_x = ball_move_x;
  ball_y = ball_move_y;
  OLED.drawPixel(ball_x,ball_y,WHITE);
}

void move_board(){
  int val=AnalogRead(Cnl)
  OLED.drawFastVline(cur_x,cur_y,5,BLACK);
  move_x=OLED.map(val,);
  cur_x=move_x;
  OLED.drawFastVline(cur_x,cur_y,5,WHITE);
}

void PLaying(int n){
    move_ball();
    move_board();
    OLED.Display();
}

void GameOver()
{   OLED.clearDisplay();
    ball_x=
    ball_y=10;
    OLED.setCursor(x,y);
    OLED.println("LOL YOU FUCKING IDIOT!");
    OLED.Display();
    Delay(5000);
    OLED.clearDisplay();
    start();
    gameState=true;
}

void BumpSound(){
  Tone(speakerPin,415);
}

void setup() {
  Adafruit_SSD1306 OLED(OLED_RESET);
  OLED.setTextSize(2);
  OLED.setTextColor(WHITE);
  start();
  OLED.Display();
}

void loop() {
  if(gameState)==1){
    Playing();
  }
  if(gameState==0){
    GameOver();
  }

}
